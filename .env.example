# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Qdrant Configuration (Self-Hosted Vector Database)
# For self-hosted Qdrant on EC2:
QDRANT_URL=http://your-ec2-ip:6333
QDRANT_COLLECTION_NAME=LearnByAI
# API key is optional for self-hosted instances
QDRANT_API_KEY=

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET_NAME=your_bucket_name_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# MongoDB Configuration
# For self-hosted MongoDB on EC2:
# Format: mongodb://username:password@host:port/database?authSource=admin
# Example: mongodb://admin:mypassword@12.34.56.78:27017/learnbyai_platform?authSource=admin
# Note: URL encode special characters in password (@ = %40, # = %23, etc.)
MONGODB_URI=mongodb://admin:LearnByAI786@65.0.165.27:27017/?authSource=admin
MONGODB_DB_NAME=learnbyai_platform
# Set to 'true' for single MongoDB instance (not replica set)
MONGODB_DIRECT_CONNECTION=true

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Redis Configuration (Optional)
REDIS_URL=your_redis_url_here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Important Notes:
# - OPENAI_EMBEDDING_MODEL should be "text-embedding-3-large" for 3072 dimensions
# - Qdrant collection must be configured with 3072 dimensions
# - Qdrant distance metric should be "Cosine"
# - For self-hosted Qdrant, use HTTP URL (http://your-ec2-ip:6333)
# - QDRANT_API_KEY can be empty for self-hosted instances without authentication

# MongoDB Self-Hosted Setup:
# 1. Ensure MongoDB is running on your EC2 instance
# 2. Configure /etc/mongod.conf with bindIp: 0.0.0.0
# 3. Enable authentication in MongoDB
# 4. Create a user with appropriate permissions
# 5. Configure EC2 security group to allow inbound on port 27017
# 6. URL encode special characters in password
# 7. Test connection with: bun test-connections.mjs
